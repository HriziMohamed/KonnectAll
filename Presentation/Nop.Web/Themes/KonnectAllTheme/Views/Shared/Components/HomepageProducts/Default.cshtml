@model IList<ProductOverviewModel>
@functions {
        string FormatProductName(string productName)
        {
            string result = productName;
            if(productName.Length > 50)
            {
                result = result.Substring(0, 50);
            }
            if (productName.Length < 50)
            {
                int nbreEspace = 50 - productName.Length;
                for(int j=0;j<=nbreEspace;j++)
                {
                    result =result+ " ";
                }
            }
            return result;
        }
        }
@if (Model.Count > 0)
{
    foreach (var product in Model)
    {    
        <div class="col-md-3 col-sm-3 store-product juices" style="display:block">
            <div class="product">
                <div class="product-img" style="min-height: 200px;
                            width: 175px;
                            background: #ffffff !important;
                            display: flex;
                            align-items: center;
                            margin-bottom: 10px;
                            border-radius: 10px;
                            justify-content: center;">
                    <a class="name-product" href="@Url.RouteUrl("Product", new {SeName = @product.SeName})" title="@product.Name">
                    <img style="width : 175px;" onMouseOver="this.style.cursor='pointer'"  alt="@product.Name" class="prod-img" src="@product.DefaultPictureModel.ImageUrl">
                    </a>
                </div>
                <div class="info-product">
                    <a style="min-height:84px !important; display: flex !important;
                            justify-content: center !important;
                            font-size: 14px !important;
                            line-height: 1.42857143 !important;
                            font-family: 'Gotham' !important;
                            text-align: center !important;
                            color: #1f1f1f !important;" class="name-product" href="@Url.RouteUrl("Product", new {SeName = @product.SeName})" title="@product.Name">
                        @FormatProductName(@product.Name)
                    </a>
                    <div class="price-product" style="font-weight: 400;text-align: center;padding: 5px;font-size: 14px;
                            line-height: 1.42857143;
                            color: #333;">
                        @product.ProductPrice.Price
                    </div>
                </div>
            </div>
        </div>


    }
}
else
{
    <div class="col-md-3 col-sm-3 store-product juices" style="display:block">
        <p>We are currently working on adding new products to this subcategory. Check back soon for our latest additions!</p>
    </div>

}