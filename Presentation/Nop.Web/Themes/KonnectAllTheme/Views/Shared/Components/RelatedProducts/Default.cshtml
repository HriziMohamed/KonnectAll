@using Nop.Core.Domain.Orders
@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="more-product">
        <div class="head-product">
            <div class="title">
                <h5>@T("Products.RelatedProducts")</h5>
                @*<h5>More Products from this vendor</h5>*@
            </div>
            <a class="btn-sm-black btn-border">
                <span class="btn-sm text-black-light  font-normal">shop now</span>
            </a>
        </div>

        <div class="slide-container">
            <div id="slide-left" class="arrow-prev">&lt;</div>
            <section class="container" id="slider">

                @foreach (var item in Model)
                {
                  @*<div class="item-box col-xs-12 col-sm-4 col-md-4">
                        <div class="thumbnail">
                            @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    </div>*@
                    var addtocartlink = Url.RouteUrl("AddProductToCart-Catalog", new { productId = item.Id, shoppingCartTypeId = (int)ShoppingCartType.ShoppingCart, quantity = 1 });
                    <div class="thumbnail">
                        <img alt="" class="shop-item-image prod-img" src="./assets/img/product/product1.png">
                        <div class="product-details">
                            <a class="shop-item-title name-product text-black" href="product.html">
                                @item.Name
                            </a>
                            <div class="shop-item-price price-product">
                                @item.ProductPrice.Price
                            </div>
                            <a onclick="AjaxCart.addproducttocart_catalog('@addtocartlink');return false;" class="add-cart shop-item-button">@T("ShoppingCart.AddToCart").Text</a>
                        </div>
                    </div>

                }



            </section>
            <div id="slide-right" class="arrow-next">&gt;</div>
        </div>
    </div>

}