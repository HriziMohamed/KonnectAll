@if (Model.Display)
{
    <div class="giftcard-box">
        <div class="title">
            <strong>@T("ShoppingCart.GiftCardCouponCode")</strong>
        </div>
        <div class="cart-box-wrapper" style="display:block;">
            <div class="hint">@T("ShoppingCart.GiftCardCouponCode.Tooltip")</div>
            <div class="input-group" style="width:400px;">
            <input style="width:60%;" name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code form-control" aria-label="@T("ShoppingCart.GiftCardCouponCode.Label")" />           
                <button style=" float: right;
                width: 40% !important;
                height: 36px !important;
                padding: 0;
               /* display: inline-block;*/
                border: none;
                background-color: #aaa;
                padding: 10px 15px !important;
                color: #fff;
                text-transform: uppercase !important;
                font-size: 14px;
                font-family: Arial,Helvetica,sans-serif;" type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode" class="btn btn-primary apply-gift-card-coupon-code-button">
                    @T("ShoppingCart.GiftCardCouponCode.Button")
                </button>
           </div>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="message bg-danger">
                    @Model.Message
                </div>
            }
        </div>
    </div>
    <script asp-location="Footer">
        $(document).ready(function () {
            $('#giftcardcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applygiftcardcouponcode').trigger("click");
                    return false;
                }
            });
        });
    </script>
}   